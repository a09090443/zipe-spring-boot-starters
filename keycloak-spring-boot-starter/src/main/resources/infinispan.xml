<?xml version="1.0" encoding="UTF-8"?>
<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:10.1 https://infinispan.org/schemas/infinispan-config-fragment-10.1.xsd"
        xmlns="urn:infinispan:config:10.1">

    <jgroups>
        <!--        <stack-file name="jgroups" path="${jgroups.configfile:jgroups.xml}"/>-->
        <!-- the default-configs/default-jgroups-udp.xml is located in infinispan-core-*.jar-->
        <stack-file name="jgroups" path="${jgroups.configfile:default-configs/default-jgroups-udp.xml}"/>
    </jgroups>

    <cache-container name="keycloak">

        <transport stack="jgroups" lock-timeout="60000"/>

        <local-cache name="realms">
            <memory max-count="10000">
            </memory>
        </local-cache>
        <local-cache name="users">
            <memory max-count="10000">
            </memory>
        </local-cache>
        <distributed-cache name="sessions" owners="1"/>
        <distributed-cache name="authenticationSessions" owners="1"/>
        <distributed-cache name="offlineSessions" owners="1"/>
        <distributed-cache name="clientSessions" owners="1"/>
        <distributed-cache name="offlineClientSessions" owners="1"/>
        <distributed-cache name="loginFailures" owners="1"/>
        <local-cache name="authorization">
            <memory max-count="10000">
            </memory>
        </local-cache>
        <replicated-cache name="work"/>
        <local-cache name="keys">
            <expiration max-idle="3600000"/>
            <memory max-count="1000">
            </memory>
        </local-cache>
        <distributed-cache name="actionTokens" owners="2">
            <expiration max-idle="-1" interval="300000"/>
            <memory max-count="-1">
            </memory>
        </distributed-cache>
    </cache-container>
</infinispan>